<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory"
    android:orientation="vertical" >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
	    android:id="@+id/llOption01">
	    <ImageView 
		    android:layout_width="100dp"
		    android:layout_height="100dp"
		    android:padding="10dp"
		    android:contentDescription="@string/app_name"
		    android:src="@drawable/evereco_icon"
		    android:id="@+id/ivOptionEverecoLogo"/>
	    <TextView 
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:padding="10dp"
	    	android:gravity="left|center_vertical"
	    	android:textSize="20sp"
	    	android:text="@string/app_name_ja"
	    	android:id="@+id/tvOptionEvereco"
	        />
	</LinearLayout>
    <TextView 
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:padding="10dp"
    	android:textSize="12sp"
    	android:text="@string/app_name_ja"
    	android:id="@+id/tvOptionEvereco2"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="horizontal" 
	    android:id="@+id/llOption02">
	    <TextView 
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:id="@+id/tvOptionSheepman"
	        />
	</LinearLayout>
</LinearLayout>
